generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum RoleEnum {
  USER
  ADMIN
  SUPER_ADMIN
}

model Role {
  id     String
  role   RoleEnum
  user   User     @relation(fields: [userId], references: [id])
  userId String

  @@id([id, userId])
}

model User {
  id                String   @id @default(uuid())
  name              String
  email             String   @unique
  roles             Role[]
  password          String
  passwordUpdatedAt DateTime
}

model PasswordResetToken {
  id    String @id @default(uuid())
  email String
  token String @unique
}
